<h3>Questions for: {{quiz.name}}</h3>

<div class="card mb-4">
    <div class="card-header">Add New Question</div>
    <div class="card-body">
        <form action="/admin/questions" method="POST">
            <input type="hidden" name="quizId" value="{{quiz.id}}">
            <div class="row">
                <div class="col-8">
                    <input type="text" name="text" class="form-control" placeholder="Enter question text..." required>
                </div>
                <div class="col-2">
                    <select name="correctAnswer" class="form-select">
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                </div>
                <div class="col-2">
                    <button type="submit" class="btn btn-success w-100">Add</button>
                </div>
            </div>
        </form>
    </div>
</div>

<ul class="list-group">
    {{#each quiz.questions}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
        <span>{{this.text}} <strong>({{this.correctAnswer}})</strong></span>
        <button class="btn btn-outline-danger btn-sm">Remove</button>
    </li>
    {{/each}}
</ul>