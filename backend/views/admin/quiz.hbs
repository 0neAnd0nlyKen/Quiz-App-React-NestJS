<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Manage Quizzes</h2>
    <a href="/admin/quizzes/create" class="btn btn-success">Create New Quiz</a>
</div>

<table class="table table-striped border">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Quiz Name</th>
            <th>Question Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each quizzes}}
        <tr>
            <td>{{this.id}}</td>
            <td><strong>{{this.name}}</strong></td>
            <td>{{this.questions.length}}</td>
            <td>
                <a href="/admin/quizzes/{{this.id}}/edit" class="btn btn-sm btn-primary">Edit</a>
                <form action="/admin/quizzes/{{this.id}}/delete" method="POST" style="display:inline;" 
                    onsubmit="return confirm('Are you sure you want to delete this quiz?');">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>                
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>