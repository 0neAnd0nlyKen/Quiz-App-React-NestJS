<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Session Management</h2>
    <a href="/admin/sessions/create" class="btn btn-primary">+ Add Session</a>
</div>

<table class="table table-striped border">
    <thead class="table-dark">
        <tr>
            <th>id</th>
            <th>User</th>
            <th>Quiz</th>
            <th>Status</th>
            <th>Time Left</th>
            <th>Score</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each sessions}}
        <tr>
            <td>{{this.id}}</td>
            <td> <a href="/admin/users/{{this.userId}}/edit">{{this.userId}}</a></td>
            <td> <a href="/admin/quizzes/{{this.quizId}}/edit">{{this.quizId}}</a></td>
            <td>
                <span class="badge {{#if (eq this.status 'completed')}}bg-success{{else}}bg-warning{{/if}}">
                    {{this.status}}
                </span>
            </td>
            <td>{{this.secondsRemaining}}s</td>
            <td>{{this.score}}</td>
            <td>
                <a href="/admin/sessions/{{this.id}}/edit" class="btn btn-sm btn-outline-primary">Edit</a>
                <form action="/admin/sessions/{{this.id}}/delete" method="DELETE" style="display:inline;" 
                    onsubmit="return confirm('Are you sure you want to delete this session?');">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>   
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>